@model int

@{
    ViewData["Title"] = "Shoes";
}

<h1>@ViewData["Title"]</h1>

<p>Kontroluj swoją bazę danych</p>

<form asp-controller="Shoes" asp-action="DisplayShoeInfo" method="post">
    <label for="shoeId">Enter Shoe ID:</label>
    <input type="number" id="shoeId" name="shoeId" required />
    <button type="submit">Get Shoe Info</button>
</form>
