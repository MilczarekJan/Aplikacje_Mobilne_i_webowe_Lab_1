@model int

@{
    ViewData["Title"] = "Shoes";
}

<h1>@ViewData["Title"]</h1>

<p>Kontroluj swoją bazę danych</p>

<form asp-controller="Shoes" asp-action="DisplayShoeInfo" method="post">
    <label for="shoeId">Enter Shoe ID:</label>
    <input type="number" id="shoeId" name="shoeId" required />
    <button type="submit">Get Shoe Info</button>
</form>


<form asp-controller="Shoes" asp-action="DisplayDeleteMessage" method="post">
    <label for="shoeId">Enter Shoe ID:</label>
    <input type="number" id="shoeId" name="shoeId" required />
    <button type="submit">Delete Shoe</button>
</form>

<form asp-controller="Shoes" asp-action="DisplayAddedShoe" method="post">
    <label for="shoeName">Enter Shoe Name:</label>
    <input type="text" id="shoeName" name="shoeName" required />

    <label for="shoeSize">Enter Shoe Size:</label>
    <input type="number" id="shoeSize" name="shoeSize" required />

    <label for="shoeDescription">Enter Shoe Description:</label>
    <input type="text" id="shoeDescription" name="shoeDescription" required />

    <button type="submit">Add Shoe</button>
</form>

<form asp-controller="Shoes" asp-action="DisplayUpdatedShoe" method="post">
    <label for="shoeId">Enter Shoe ID:</label>
    <input type="number" id="shoeId" name="shoeId" required />

    <label for="shoeName">Enter Shoe Name:</label>
    <input type="text" id="shoeName" name="shoeName" required />

    <label for="shoeSize">Enter Shoe Size:</label>
    <input type="number" id="shoeSize" name="shoeSize" required />

    <label for="shoeDescription">Enter Shoe Description:</label>
    <input type="text" id="shoeDescription" name="shoeDescription" required />

    <button type="submit">Update Shoe</button>
</form>